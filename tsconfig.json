{
    "compileOnSave": false,
    "compilerOptions": {
      "module": "es2020",
      "esModuleInterop": true,
      "outDir": "./dist/out-tsc",
      "sourceMap": true,
      "declaration": false,
      "moduleResolution": "bundler",
      "experimentalDecorators": true,
      "target": "ES2022",
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2017",
        "dom"
      ],
      "useDefineForClassFields": false
    },

    "angularCompilerOptions": {
        "strictTemplates": true
    }
}
